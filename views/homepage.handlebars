{{#each posts as |post|}}
    <section class="post-card">
        <div class="post-card-sec">
            <h2>{{post.title}}</h2>
            <p>{{post.content}}</p>
            <p>Created by {{post.user_id}} on {{format_date post.date_created}}</p>
        </div>
    </section>
{{/each}}

<script src="/js/homepage.js"></script>